<!-- HTML-код для кнопки получения реферальной ссылки -->
<button id="referralButton">Получить реферальную ссылку</button>
<p id="referralLink" style="display:none;"></p>

<script>
document.getElementById("referralButton").addEventListener("click", function() {
    // Замените на вашу логику получения реферальной ссылки
    const referralCode = "your_referral_code"; // Получите реферальный код пользователя
    const referralUrl = `https://yourgame.com/register?ref=${referralCode}`;
    document.getElementById("referralLink").innerText = `Ваша реферальная ссылка: ${referralUrl}`;
    document.getElementById("referralLink").style.display = "block"; // Показать ссылку
});
</script>