<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Реферальная система</title>
</head>
<body>
    <h1>Welcome to ShibaSlam!</h1>
    <button id="referralButton">Получить реферальную ссылку</button>
    <p id="referralLink" style="display:none;"></p>
    <p id="rewards" style="display:none;"></p>

    <script>
        // Пример данных пользователя
        const userReferralCode = "ABC123";  // Реферальный код пользователя
        const isUserPremium = false;  // Признак, является ли пользователь премиум
        const invitedUserIsPremium = true;  // Признак, является ли приглашенный пользователь премиум

        document.getElementById("referralButton").addEventListener("click", function() {
            const referralUrl = `https://ShibaSlame.com/register?ref=${userReferralCode}`;
            document.getElementById("referralLink").innerText = `Ваша реферальная ссылка: ${referralUrl}`;
            document.getElementById("referralLink").style.display = "block"; // Показать ссылку

            // Логика наград
            const referrerReward = isUserPremium ? 100000 : 50000;  // Награда реферера
            const invitedReward = invitedUserIsPremium ? 100000 : 50000;  // Награда приглашенного

            document.getElementById("rewards").innerText = 
                `Награды: Реферер получает ${referrerReward} sbimaslams, ` +
                `приглашенный получает ${invitedReward} sbimaslams.`;
            document.getElementById("rewards").style.display = "block"; // Показать награды
        });
    </script>
</body>
</html>
